{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@": ["src/*"],
      "views/*": ["src/views/*"],
      "components/*": ["src/components/*"],
      "static/*": ["src/static/*"],
      "utils/*": ["src/utils/*"],
      "assets/*": ["src/assets/*"],
      "request/*": ["src/request/*"],
      "store/*": ["src/store/*"],
      "router/*": ["src/router/*"],
    }
  },
  "include": [
    "src"
  ]
}
